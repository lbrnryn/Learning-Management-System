{{> dashboardnavbar}}

<div class="container-lg">
  <div class="row">

    <div class="col pt-4">
      <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addSubject">Add Subject</button>
      <div id="addSubject" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">

            <form action="/subjects" method="post">
              <div class="modal-body">
                <div class="row">
                  <div class="col input-group mb-3">
                    <label class="input-group-text" for="year">Year</label>
                    <select class="form-select" name="year" required>
                      <option value="">Choose Year...</option>
                      <option value="1st Year">1st Year</option>
                      <option value="2nd Year">2nd Year</option>
                      <option value="3rd Year">3rd Year</option>
                      <option value="4th Year">4th Year</option>
                    </select>
                  </div>
                  <div class="col input-group mb-3">
                    <label class="input-group-text" for="semester">Trimester</label>
                    <select class="form-select" name="semester" required>
                      <option value="">Choose Trimester...</option>
                      <option value="1st Trimester">1st Trimester</option>
                      <option value="2nd Trimester">2nd Trimester</option>
                      <option value="3rd Trimester">3rd Trimester</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="col input-group mb-3">
                    <span class="input-group-text">Code</span>
                    <input type="text" class="form-control" name="code" placeholder="Code" required>
                  </div>
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text">Title</span>
                  <input type="text" class="form-control" name="title" placeholder="Title" required>
                </div>
                <div class="row">
                  <div class="col input-group mb-3">
                    <span class="input-group-text">Pre-requisite</span>
                    <input type="text" class="form-control" name="prerequisite" placeholder="Pre-requisite" required>
                  </div>
                  <div class="col input-group mb-3">
                    <span class="input-group-text">Units</span>
                    <input type="text" class="form-control" name="units" placeholder="Units" required>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>

          </div>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-sm caption-top mb-5">
          <caption>1st Year</caption>
          <thead>
            <tr>
              <th>Code</th>
              <th>Title</th>
              <th>Units</th>
              <th>Prerequisite</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each subjects}}
            {{#if this.firstYear}}
            <tr>
              <td class="col-2 text-nowrap">{{this.code}}</td>
              <td class="col-5 text-nowrap">{{this.title}}</td>
              <td>{{this.units}}</td>
              <td>{{this.prerequisite}}</td>
              <td>
                <div class="d-flex justify-content-center align-items-center">
                  <a class="badge rounded-pill btn-primary text-decoration-none" href="/chapters/subject/{{this._id}}">Add Chapter</a>
                  <form class="delSubjectForm" action="/subjects?_method=DELETE" method="post">
                    <input type="hidden" name="subjectId" value="{{this._id}}">
                    <button type="submit" class="badge rounded-pill bg-danger border-0">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            {{/if}}
            {{/each}}
          </tbody>
        </table>
