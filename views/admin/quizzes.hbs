<div class="container">
  <form action="/subjects/{{subject._id}}/quizzes?_method=PUT" method="POST">
    <div class="row">
      <div class="col-2">
        <!-- <label for="title">Title</label>
        <input type="text" class="form-control form-control-sm" id="title" name="title"> -->
        <label>Title</label>
        <select class="form-select form-select-sm" name="title">
          <option selected>Title...</option>
          <option value="Q1">Q1</option>
          <option value="Q2">Q2</option>
          <option value="Q3">Q3</option>
          <option value="Q4">Q4</option>
          <option value="Q5">Q5</option>
          <option value="Q6">Q6</option>
          <option value="Q7">Q7</option>
          <option value="Q8">Q8</option>
          <option value="Q9">Q9</option>
          <option value="Q10">Q10</option>
        </select>
      </div>
      <div class="col-2">
        <label for="answer">Answer</label>
        <input type="text" class="form-control form-control-sm" id="answer" name="answer">
      </div>
      <div class="col">
        <label for="question">Question</label>
        <input type="text" class="form-control form-control-sm" id="question" name="question">
      </div>
    </div>
    <p>Choices</p>
    <div class="row d-flex align-items-center">
      <div class="col">
        <!-- <label for="value">C1</label> -->
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c1" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value">
      </div>
      <div class="col">
        <!-- <label for="value">C2</label> -->
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c2" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value">
      </div>
      <div class="col">
        <!-- <label for="value">C3</label> -->
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c3" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value">
      </div>
      <div class="col">
        <!-- <label for="value">C4</label> -->
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c4" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value">
      </div>
    </div>
    <div class="d-grid">
      <!-- <button type="submit" class="btn btn-sm btn-primary">Submit</button> -->
      <input type="submit" class="btn btn-sm btn-primary" value="Submit">
    </div>
  </form>
</div>

{{#each chapters}}
  <div class="">
    {{#each this.quiz}}
      <p class="mt-3 mb-0">{{this.title}}: {{this.question}} | Answer: {{this.answer}}</p>
      <!-- <p>Answer: {{this.answer}}</p> -->
      {{#each this.choices}}
        <input type="radio" id={{this.order}} name={{this.title}} value={{this.value}}>
        <label for={{this.order}}>{{this.value}}</label>
      {{/each}}
    {{/each}}
  </div>
{{/each}}
