{{> dashboardnavbar}}

<div class="container mt-5 d-md-flex justify-content-around">
  <!-- <form action="/subjects/{{subject._id}}/quizzes?_method=PUT" class="" method="POST"> -->
  <form action="/questions/pretest/chapter/{{chapter._id}}" method="POST">
    <div class="d-flex gap-3">
      <div class="">
        <label>Title</label>
        <select class="form-select form-select-sm" name="title" required>
          <option></option>
          <option value="Q1">Q1</option>
          <option value="Q2">Q2</option>
          <option value="Q3">Q3</option>
          <option value="Q4">Q4</option>
          <option value="Q5">Q5</option>
          <option value="Q6">Q6</option>
          <option value="Q7">Q7</option>
          <option value="Q8">Q8</option>
          <option value="Q9">Q9</option>
          <option value="Q10">Q10</option>
        </select>
      </div>
      <div class="">
        <label for="answer">Answer</label>
        <input type="text" class="form-control form-control-sm" id="answer" name="answer" required>
      </div>
    </div>

    <div class="">
      <label for="question">Question</label>
      <input type="text" class="form-control form-control-sm" id="question" name="question" required>
    </div>

    <p class="mt-2 mb-0">Choices</p>

    <div class="d-flex justify-content-between mb-3">
      <div class="">
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c1" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value" required>
      </div>
      <div class="">
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c2" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value" required>
      </div>
    </div>
    <div class="d-flex justify-content-between mb-3">
      <div class="">
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c3" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value" required>
      </div>
      <div class="">
        <input type="hidden" class="form-control form-control-sm p-0" name="order" value="c4" readonly>
        <input type="text" class="form-control form-control-sm" id="value" name="value" required>
      </div>
    </div>

    <div class="d-grid">
      <input type="submit" class="btn btn-sm btn-primary" value="Submit">
    </div>
  </form>
  <div class="">
    {{#each pretestQuestions}}
      <p class="mb-0">{{this.title}}: {{this.question}} | Answer: {{this.answer}}</p>
      {{#each this.choices}}
        <input type="radio" id={{this.order}} name={{this.title}} value={{this.value}}>
        <label for={{this.order}}>{{this.value}}</label>
      {{/each}}
    {{/each}}
  </div>

</div>
