{{> dashboardnavbar}}

<div class="container-lg mt-3">
  <h5>Chapters</h5>
  <input type="hidden" id="selectSubjectUrl" value={{fetchUrl}}>
  <form action="/chapters" class="mb-3" method="post">
    <select id="selectSubject" class="form-select form-select-sm mb-3" name="subject">
      <option selected>Choose Subject</option>
      {{#each subjects}}
        <option value={{this._id}}>{{this.title}} {{this.code}}</option>
      {{/each}}
    </select>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control form-control-sm" id="title" name="title" placeholder="Title">
    </div>
    <div class="mb-3">
      <label for="lesson">Lesson</label>
      <p class="text-muted">(Note: You can also type html tags with/without inline css styles)</p>
      <textarea class="form-control form-control-sm" placeholder="Type here the lesson..." id="lesson" name="lesson"></textarea>
    </div>
    <input type="submit" class="btn btn-primary btn-sm" value="Submit">
  </form>

  <div>
    <div id="chaptersContainer" class="accordion"></div>
  </div>

</div>
