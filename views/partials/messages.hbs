{{#if success}}
  <div class="toast-container position-fixed bottom-0 end-0 remove2s">
    {{#each success}}
    <div class="toast show">
      <div class="toast-header d-flex justify-content-between align-items-center primary-blue">
        <img src="./images/logo.png" class="rounded sm-logo me-2" alt="...">
        <p class="me-auto mb-0 text-white">ICCT Colleges</p>
        <button type="button" class="btn-close text-white" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body">
        {{this}}
      </div>
    </div>
    {{/each}}
  </div>
{{/if}}

{{#if errors}}
  <div class="toast-container position-fixed bottom-0 end-0 remove2s">
    {{#each errors}}
