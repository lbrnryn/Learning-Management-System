{{> dashboardnavbar}}

<div class="container mt-3">
  <div class="row g-4">
    {{#each classes}}
      <div class="col-md-6">
        <!-- <a href="/subjects/{{this.subject._id}}/chapters" class="text-decoration-none"> -->
        <a href="/chapters/subject/{{this.subject._id}}" class="text-decoration-none">
          <div class="card">
            <div class="card-body text-dark">
              <h5 class="card-title">{{this.subject.title}} ({{this.subject.code}})</h5>
              <p class="card-text">{{this.year}} {{this.semester}}</p>
              <p class="card-text">{{this.day}} | {{this.room}}</p>
              <p class="card-text">{{this.timeStart}} - {{this.timeEnd}}</p>
              <p class="card-text">{{this.subject.chapters.length}} Chapters</p>
            </div>
          </div>
        </a>
      </div>
    {{/each}}

  </div>
</div>

{{> messages}}
